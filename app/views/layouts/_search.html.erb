<div class="row">
  <div class="search_form mx-auto mt-3">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"User"=>"user", "Book"=>"book"}) %>
      <%= f.select :method, options_for_select({"完全一致"=>"perfect", "部分一致"=>"partical"}) %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
</div>